<%= render 'shared/navbar' %>

<main class="skills-index">
  <h1><%= t '.title' %></h1>

  <table class="table">
    <thead>
      <tr>
        <th><%= t '.id' %></th>
        <th><%= t '.name' %></th>
        <th><%= t '.created_at' %></th>
        <th><%= t '.actions' %></th>
      </tr>
    </thead>
    <tbody>
      <% @skills.each do |skill| %>
        <tr>
          <td><%= skill.id %></td>
          <td><%= skill.name %></td>
          <td><%= l(skill.created_at, format: :short) %></td>
          <td>
            <div class="table__actions">
              <%= link_to edit_skill_path(skill), class: 'table__action table__action--edit' do %>
                <span class="material-icons">edit</span>
              <% end %>
              <%= link_to skill, method: :delete, data: { confirm: t('alert.confirm') }, class: 'table__action table__action--delete' do %>
                <span class="material-icons">delete</span>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</main>
