<%= form_with model: skill do |form| %>
  <div class="form-group">
    <%= form.label :name, t('skills.form.name.label'), class: 'form-label' %>
    <%= form.text_field :name, placeholder: t('skills.form.name.placeholder'), class: 'form-input' %>
  </div>

  <%= form.submit t('skills.form.submit'), class: 'submit' %>
<% end %>

<% unless @skill.errors.empty? %>
  <div class="errors">
    <ul>
      <% @skill.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
