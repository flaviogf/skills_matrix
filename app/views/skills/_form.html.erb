<%= form_with model: skill do |form| %>
  <div class="form__group">
    <%= form.label :name, class: 'form__label' %>
    <%= form.text_field :name, class: 'form__input' %>
    <% skill.errors.full_messages_for(:name).each do |message| %>
      <span class="form__error"><%= message %></span>
    <% end %>
  </div>

  <div class="form__group">
    <button class="skills__form-button"><span class="material-icons">check</span></button>
  </div>
<% end %>
