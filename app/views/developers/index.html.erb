<%= render 'shared/navbar' %>

<main class="developers-index">
  <h1><%= t '.title' %></h1>

  <table class="table">
    <thead>
      <tr>
        <th><%= t '.id' %></th>
        <th><%= t '.email' %></th>
        <th><%= t '.created_at' %></th>
        <th><%= t '.actions' %></th>
      </tr>
    </thead>
    <tbody>
      <% @developers.each do |developer| %>
        <tr>
          <td><%= developer.id %></td>
          <td><%= developer.email %></td>
          <td><%= l(developer.created_at, format: :short) %></td>
          <td>
            <div class="table__actions">
              <%= link_to developer, method: :delete, data: { confirm: t('alert.confirm') }, class: 'table__action table__action--delete' do %>
                <span class="material-icons">delete</span>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</main>
